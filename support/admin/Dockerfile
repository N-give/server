FROM oada/docker-base-node

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y \
               wget git python vim gnupg \
               make gcc g++ \
               iputils-ping dnsutils

##################################################################################################
# Configure git:
#RUN git config --global user.email "dev@somebody.com" \
#&& git config --global user.name "dev"

##############################################################################################
# Install arangodb client tools:
RUN wget https://download.arangodb.com/arangodb34/DEBIAN/Release.key \
    && apt-key add - < Release.key \
    && echo 'deb https://download.arangodb.com/arangodb34/DEBIAN/ /' | tee /etc/apt/sources.list.d/arangodb.list \
    && apt-get install --fix-missing apt-transport-https \
    && apt-get update \
    && apt-get install arangodb3-client

##############################################################################################
# Install kafka zookeeper tools
RUN apt-get install -y kafkacat zookeeper-bin
RUN wget https://github.com/outbrain/zookeepercli/releases/download/v1.0.10/zookeepercli_1.0.10_amd64.deb \
    && dpkg -i zookeepercli_1.0.10_amd64.deb \
    && apt-get install -f \
    && rm zookeepercli_1.0.10_amd64.deb

#############################################################################################
# Install nvm: can't source /root/.bashrc because this stuff all runs in sh
# If you don't set NVM_DIR, then it will install to /bin instead of /root/.nvm
ENV NVM_DIR=/root/.nvm
RUN wget -qO- https://raw.githubusercontent.com/creationix/nvm/v0.35.2/install.sh | bash \
    && . /root/.nvm/nvm.sh \
    && nvm install v14 \
    && nvm alias default v14

# Install stuff from npm, clear out any existing node_modules to ensure clean build
RUN rm -rf /code/admin/node_modules
RUN . /root/.nvm/nvm.sh \
    && nvm use v14 \
    && npm install -g yarn \
    && yarn global add mocha
    # You can put any global NPM installs here

# Add any forced upgrades here:
# RUN yarn global upgrade @oada/oada-certs

COPY "./.vimrc" "/root/.vimrc"

#############################################################################################
# Install Docker
RUN apt-get update
# ubuntu version:
# RUN apt-get -qq install -y docker.io --fix-missing

##########################################
# Install letsencrypt to get certs
RUN echo 'deb http://deb.debian.org/debian stretch-backports main ' | tee /etc/apt/sources.list.d/stretch-backports.list \
  && apt-get update -y \
  && apt-get install -y certbot python-certbot-apache -t stretch-backports
# Ubuntu version:
# RUN apt-get update \
#  && apt-get install -y software-properties-common \
#  && add-apt-repository ppa:certbot/certbot \
#  && apt-get update \
#  && apt-get install -y python-certbot-nginx

############################################
# Installing socat to help with port-forwarding arangodb
RUN apt-get -y install socat

WORKDIR "/oada/admin"
CMD bash
